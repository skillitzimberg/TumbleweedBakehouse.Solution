@using TumbleweedBakehouse.Models;
@{
  Layout = "_Layout";
}

<div class='products'>
    @if (Model.Count == 0)
    {
    <p>There are no products currently available at this time.</p>
    <form action="/product/new">
      <button type="submit">Add some breads!</button>
    </form>
    }
    else
    {
      @foreach (var product in Model)
      {
        if (product.GetProductAvailability() == true)
        {
          <div class='productGridItem' id='@product.GetId()'>
            <a href='/product/@product.GetId()'>
            <img src='@product.GetUrl()' alt='photo of @product.GetProductName()'>

            <p>@product.GetProductName()</p>
            <input type='hidden' class='productName' value="@product.GetProductName()">

            <p>$@product.GetPrice()</p>
            <input type='hidden' class='productPrice' value="@product.GetPrice()">
            </a>
          </div>
        }
      }
    }
</div>
